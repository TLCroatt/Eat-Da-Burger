<body>
		<div class="jumbotron">
            <div class="container">
              <h1 class="display-4">Eat-Da-Burger!</h1>
            </div>
          </div>

        <div class="container">
            <div class="row">
                <div class="col-md-4" id="burgers">
                    <h2>Eat Dem Burgers!</h2>
                    <ul>
                        {{#each burgers}}
                            {{#unless this.devoured}}
                            <li>
                                
                                {{this.burger_name}}

                                <form class="devour" data-id = {{this.id}}>
			                    <input type="hidden" name="devoured" value="true">
			                    <button class="btn-primary devour-button" type="submit">Eat-Da-Burger!</button>
			                    </form>
                            </li>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-4" id="devoured">
                    <h2>Devoured Burgers!</h2>
                    <ul>
                        {{#each burgers}}
                            {{#if this.devoured}}
                                <li>
                                    {{this.id}}
                                    {{this.burger_name}}
                                    
                                </li>
                            {{/if}}
                        {{/each}}    
                    </ul>
                </div>
            </div>
        

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4" id="addBurger">
    
                    <h2>Add A Burger!</h2>
    
                    <form class="create-form">
    
                     <div class="form-group">
                        <p>Add a burger you want to devour!</p>
                        <input type="text" id="ca" name="burger_name">
                    </div>
                  
                    <button class="btn-primary order" type="submit"> Order <i class="fas fa-hamburger"></i></button>
                    </form>
    
                </div>
            </div> 
        </div>   
	</body>